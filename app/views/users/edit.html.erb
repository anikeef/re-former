<h1>Edit a user</h1>
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @user do |f| %>
  <%= f.text_field :username, placeholder: "User name" %>
  <%= f.text_field :email, placeholder: "User name" %>
  <%= f.text_field :password, placeholder: "Password" %>
  <%= f.submit "Submit" %>
<% end %>
